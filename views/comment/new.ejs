<% include ../partials/header.ejs %>

<div class="mainWrapper">
    <h1 class="formTop">New Comment</h1>
    <div class="container">
        <form action="/<%= post.author.id %>/post/<%= post._id %>/comment" method="POST">
            <div class="form-group">
                <label for="comment">Comment</label>
                <input class="form-control" type="text" name="text" autocomplete="off" placeholder="Comment" required />
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-primary btn-block">Add Comment</button>
            </div>
        </form>
    </div>
</div>


