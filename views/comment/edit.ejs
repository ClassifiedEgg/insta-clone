<% include ../partials/header.ejs %>

<div class="mainWrapper">
    <h1 class="formTop">Edit Comment</h1>
    <div class="container">
        <form action="/<%= post.author.username %>/post/<%= post._id %>/comment/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="comment">Comment</label>
                <input class="form-control" type="text" name="text" autocomplete="off" value="<%= comment.text %>" required />
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-primary btn-block">Confirm Comment Edit</button>
            </div>
        </form>
    </div>
</div>


