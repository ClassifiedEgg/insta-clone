<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container">

                <a class="navbar-brand" href="/" id="logo">Navbar</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="d-flex">
                    <form class="form-inline flex-nowrap my-2 my-lg-0 mx-auto">
                        <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search"
                            aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>

                <div class="flex-nowrap">
                    <ul class="nav ml-auto">
                        <% if (!currentUser) { %>
                        <li class="nav-item"><a href="/login" class="nav-link text-light" name="login"><i class="fas fa-sign-in-alt fa-lg"></i></a></li>
                        <li class="nav-item"><a href="/register" class="nav-link text-light"><i class="fas fa-user-plus fa-lg"></i></a></li>
                        <% } else { %>
                        <li class="nav-item"><a href="/<%= currentUser.username %>/new   " class="nav-link text-light"><i
                                    class="fas fa-plus fa-lg"></i></a></li>
                        <li class="nav dropdown">
                            <a class="nav-link dropdown-toggle text-light" data-toggle="dropdown" href="#" role="button"
                                aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-lg"></i></a>
                            <div class="dropdown-menu">
                                <a href="/<%= currentUser.username %>" class="nav-link text-dark"><span><i class="fas fa-home"></i></span> Home</a>
                                <a href="/<%= currentUser.username %>/edit" class="nav-link text-dark"><span><i class="fas fa-user-edit"></i></span> Edit Account</a>
                                <a href="/<%= currentUser.username %>/liked" class="nav-link text-dark"><span><i class="fas fa-heart"></i></span> Liked Posts</a>
                            </div>
                        </li>
                        <li class="nav-item"><a href="/logout" class="nav-link text-light fa-lg" style="height: 100%"><i
                                    class="fas fa-sign-out-alt"></i></a></li>
                        <% } %>
                    </ul>
                </div>

            </div>
        </nav>
    </header>