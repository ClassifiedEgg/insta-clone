<% include ../partials/header %>

<div class="formWrapper">
  <div class="formContainer">
    <% if(fromLogin){ %>
    <div class="formLoginContainer" style="visibility: visible; opacity: 1;">
      <%} else { %>
      <div class="formLoginContainer" style="visibility: hidden; opacity: 0;">
        <% } %>
        <div class="formLogin">
          <h1 class="formTop">Login</h1>
          <div class="rwd-form">
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="username">User Name</label>
                <input class="form-control" type="text" name="username" autocomplete="off" required />
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" name="password" autocomplete="off" required />
              </div>
              <div class="form-group">
                <button class="btn btn-md btn-primary btn-block">Login</button>
              </div>
              <hr>
              <span>New to Tardygram? <span class="toggleBtn" onclick="displayToggle()">Sign
                  up!</span></span>
              <a href="/" style="float: right;">Back</a>
            </form>
          </div>
        </div>
      </div>

    </div>

    <div class="formContainer">
      <% if(fromLogin){ %>
      <div class="formSignupContainer" style="visibility: hidden; opacity: 0;">
        <%} else { %>
        <div class="formLoginContainer" style="visibility: visible; opacity: 1;">
          <% } %>
          <div class="formSignup">
            <h1 class="formTop">Sign Up</h1>
            <form action="/register" method="POST">
              <div class="row">
                <div class="col">
                  <div class="form-group">
                    <label for="username">User Name</label>
                    <input class="form-control" type="text" name="username" autocomplete="off" placeholder="Username"
                      required />
                  </div>
                </div>
                <div class="col">
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password" autocomplete="off"
                      placeholder="Password" required />
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input class="form-control" type="text" name="firstName" autocomplete="off" placeholder="First Name"
                      required />
                  </div>
                </div>
                <div class="col">
                  <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input class="form-control" type="text" name="lastName" autocomplete="off" placeholder="Last Name"
                      required />
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input class="form-control" type="email" name="email" autocomplete="off" placeholder="Email" required />
              </div>
              <div class="form-group">
                <label for="gender">Gender</label>
                <select name="gender" class="form-control" autocomplete="off" required>
                  <option value="" disabled selected class="text-disabled">Gender</option>
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                  <option value="Other">Other</option>
                </select>
              </div>
              <div class="form-group">
                <label for="avatar">Profile Photo</label>
                <input class="form-control" type="text" name="avatar" placeholder="Avatar URL" autocomplete="off" />
              </div>
              <div class="form-group">
                <button class="btn btn-md btn-primary btn-block">Sign Up!</button>
              </div>
              <hr>
              <span>Alredy Have an account? <span class="toggleBtn" onclick="displayToggle()">Log
                  In</span></span>
              <a href="/" style="float: right;">Back</a>
            </form>
          </div>
        </div>
      </div>
    </div>

    <% include ../partials/footer %>