<% include ../partials/header.ejs %>

<div class="mainWrapper">
    <div class="wrapperTop">
        <div>
            <img src="<%= user.avatar %>" alt="" id="userPic" class="img-fluid">
        </div>
        <div class="" id="userInfo">
            <p class="row" id="userName">Name</p>
            <p class="row" id="userDetails">Posts Followers Following</p>
            <p class="row" id="userBio">Bio</p>
        </div>
        <% if (currentUser) { %>
        <div class="" id="userBtn">
            <% if (user._id.equals(currentUser._id)) { %>
            <a href="/<%= user._id %>/new"><i class="fas fa-plus fa-7x"></i></a>
            <%} else { %>
            <a href="#" class="btn btn-primary" style="width: 100%;">Follow</a>
            <%} %>
        </div>
        <%} %>
    </div>
    <hr>
    <% user.posts.forEach(function(post){ %>
    <div class="gallery">
        <a href="/<%= user._id %>/post/<%= post._id %>"><img src="<%= post.image %>" alt="" class="galleryPhoto"></a>
    </div>
    <%}) %>
</div>

<% include ../partials/footer.ejs %>